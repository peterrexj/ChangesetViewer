<Window x:Class="ChangesetViewer.UI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="482" Background="#FF723636">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center">Changesets Viewer</TextBlock>
            <TextBox Height="23" TextWrapping="Wrap" Text="$/CLS/Src/Dev" x:Name="txtSource"/>
            <Grid>
                <Label Content="Search Text" />
                <TextBox Height="23" TextWrapping="Wrap" Text="**PJ" x:Name="txtSearchText" HorizontalAlignment="Right" Width="322"/>
            </Grid>
            <ComboBox x:Name="lstUsers"/>
            <Button Content="Search" Click="btnSearch_Click" x:Name="btnSearch" Margin="124,26,2,1" Width="71" Height="25" HorizontalAlignment="Right"/>
            <Button Content="List Users" Click="btnUsers_Click" x:Name="btnListUsers" Margin="0,26,2,1" Width="71" Height="25" HorizontalAlignment="Right"/>
            <ListView Height="108" x:Name="lstContainer" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Grid.Column="1" Text="{Binding Title}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Name" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
